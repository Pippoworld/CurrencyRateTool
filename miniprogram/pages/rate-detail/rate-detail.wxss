/* 汇率详情页面 - 现代化设计 */

page {
  background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
}

.container {
  padding: 30rpx 24rpx;
  max-width: 750rpx;
  margin: 0 auto;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* === 汇率显示卡片 === */
.rate-display {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 28rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  color: white;
  position: relative;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(102, 126, 234, 0.3);
}

.rate-display::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -30%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.rate-pair {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}

.currency-info {
  font-size: 28rpx;
  font-weight: 600;
  opacity: 0.95;
  letter-spacing: 1rpx;
}

.rate-arrow {
  font-size: 24rpx;
  opacity: 0.8;
}

.current-rate {
  font-size: 72rpx;
  font-weight: 200;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: -2rpx;
  text-align: center;
  position: relative;
  z-index: 1;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.rate-change {
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  display: inline-block;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.update-time {
  font-size: 20rpx;
  opacity: 0.7;
  text-align: center;
  position: relative;
  z-index: 1;
}

.verify-btn {
  margin-top: 20rpx;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border: 1px solid rgba(255, 255, 255, 0.25);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  backdrop-filter: blur(15px);
  position: relative;
  z-index: 1;
  transition: all 0.2s ease;
}

.verify-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

/* === 统一卡片样式 === */
.card {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 28rpx 24rpx 20rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.card-icon {
  width: 44rpx;
  height: 44rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4c63d2 0%, #5a67d8 100%);
  border-radius: 12rpx;
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(76, 99, 210, 0.25);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.card-desc {
  font-size: 22rpx;
  color: #64748b;
}

.card-content {
  padding: 24rpx;
}

/* === AI 分析卡片 === */
.ai-analysis {
  /* 使用统一卡片样式 */
}

.analysis-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.status-indicator {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.status-indicator.good {
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
}

.status-indicator.warning {
  background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
}

.status-indicator.danger {
  background: linear-gradient(135deg, #ef4444 0%, #f87171 100%);
}

.status-text {
  flex: 1;
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
}

.confidence-score {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.confidence-label {
  font-size: 20rpx;
  color: #64748b;
}

.confidence-value {
  font-size: 22rpx;
  font-weight: 600;
  color: #4c63d2;
}

.analysis-summary {
  font-size: 26rpx;
  line-height: 1.6;
  color: #475569;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #4c63d2;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.analysis-factors {
  margin-bottom: 20rpx;
}

.factors-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 16rpx;
}

.factor-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
  padding: 12rpx 16rpx;
  background: #f8fafc;
  border-radius: 10rpx;
}

.factor-icon {
  color: #4c63d2;
  font-weight: bold;
  margin-top: 2rpx;
}

.factor-text {
  flex: 1;
  font-size: 22rpx;
  line-height: 1.5;
  color: #64748b;
}

.analysis-suggestion {
  background: linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 100%);
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #0ea5e9;
}

.suggestion-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 8rpx;
}

.suggestion-text {
  font-size: 22rpx;
  line-height: 1.5;
  color: #475569;
}

/* === 智能提醒卡片 === */
.alert-recommendations {
  /* 使用统一卡片样式 */
}

.recommendation-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.recommendation-card {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.recommendation-card:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
}

.recommendation-card.buy-alert {
  border-left: 4rpx solid #10b981;
  background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 100%);
}

.recommendation-card.buy-alert::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, #10b981 0%, transparent 100%);
}

.recommendation-card.sell-alert {
  border-left: 4rpx solid #f59e0b;
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
}

.recommendation-card.sell-alert::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, #f59e0b 0%, transparent 100%);
}

.rec-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.rec-icon {
  font-size: 20rpx;
}

.rec-content {
  flex: 1;
}

.rec-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.rec-desc {
  font-size: 20rpx;
  color: #64748b;
}

.rec-price {
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.price-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #4c63d2;
  margin-bottom: 4rpx;
}

.price-reason {
  font-size: 20rpx;
  color: #64748b;
}

.set-alert-btn {
  width: 100%;
  background: linear-gradient(135deg, #4c63d2 0%, #5a67d8 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(76, 99, 210, 0.25);
  transition: all 0.2s ease;
}

.set-alert-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(76, 99, 210, 0.3);
}

.set-alert-btn.buy {
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.25);
}

.set-alert-btn.sell {
  background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.25);
}

/* === 快速设置 === */
.quick-alerts {
  margin-top: 20rpx;
}

.quick-title {
  font-size: 22rpx;
  color: #64748b;
  margin-bottom: 16rpx;
}

.quick-buttons-horizontal {
