  gap: 12rpx;
  flex-wrap: wrap;
}

.quick-alert-btn {
  flex: 1;
  min-width: 160rpx;
  background: white;
  color: #4c63d2;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  font-size: 20rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.quick-alert-btn:active {
  background: #f8fafc;
  border-color: #4c63d2;
  transform: scale(0.95);
}

/* === 我的提醒入口 === */
.my-alerts-entry {
  margin-top: 20rpx;
}

.manage-alerts-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.manage-alerts-btn:active {
  background: #f8fafc;
  border-color: #4c63d2;
  transform: scale(0.98);
}

.manage-icon {
  font-size: 20rpx;
}

.manage-text {
  flex: 1;
  text-align: left;
  margin-left: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #334155;
}

.manage-arrow {
  font-size: 24rpx;
  color: #94a3b8;
}

/* === 长期监控卡片 === */
.monitoring-section {
  /* 使用统一卡片样式 */
}

.monitoring-options {
  padding: 0 24rpx 24rpx;
}

.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 12rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.option-left {
  flex: 1;
}

.option-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 4rpx;
}

.option-desc {
  font-size: 20rpx;
  color: #64748b;
}

.option-switch {
  transform: scale(0.8);
}

.monitoring-stats {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-top: 1rpx solid rgba(0, 0, 0, 0.04);
}

.stats-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #4c63d2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 20rpx;
  color: #64748b;
}

/* === 币种设置卡片 === */
.currency-settings {
  /* 使用统一卡片样式 */
}

.setting-section {
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.setting-section:last-child {
  border-bottom: none;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 4rpx;
}

.section-desc {
  font-size: 20rpx;
  color: #64748b;
}

.currency-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.currency-picker:active {
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  border-color: #4c63d2;
  transform: scale(0.98);
}

.picker-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.currency-flag {
  font-size: 40rpx;
  width: 50rpx;
  text-align: center;
}

.currency-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.currency-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
}

.currency-code {
  font-size: 20rpx;
  color: #64748b;
  font-weight: 500;
}

.picker-arrow {
  font-size: 24rpx;
  color: #94a3b8;
  font-weight: bold;
}

/* === 留学小贴士卡片 === */
.tips-section {
  /* 使用统一卡片样式 */
}

.tip-card {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.tip-card.warning {
  background: linear-gradient(135deg, #fef7cd 0%, #fef3c7 100%);
  border-color: #f59e0b;
  border-left: 4rpx solid #f59e0b;
}

.tip-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tip-icon {
  font-size: 20rpx;
}

.tip-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
}

.tip-content {
  color: #475569;
}

.tip-text {
  font-size: 22rpx;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.tip-list, .warning-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-item, .warning-item {
  font-size: 20rpx;
  line-height: 1.4;
  color: #64748b;
}

.warning-content {
  color: #92400e;
}

.warning-title {
  font-size: 22rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #92400e;
}

/* === 银行汇率 === */
.bank-rates {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.bank-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.bank-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.bank-name {
  font-size: 22rpx;
  font-weight: 600;
  color: #334155;
}

.bank-type {
  font-size: 18rpx;
  color: #64748b;
}

.bank-prices {
  display: flex;
  gap: 20rpx;
}

.price-item {
  text-align: center;
}

.price-label {
  font-size: 18rpx;
  color: #64748b;
  margin-bottom: 4rpx;
}

.price-value {
  font-size: 20rpx;
  font-weight: 600;
  color: #334155;
}

.price-item.buy .price-value {
  color: #10b981;
}

.price-item.sell .price-value {
  color: #f59e0b;
}

/* === 操作按钮 === */
.action-buttons {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
}

.swap-btn {
  flex: 1;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  color: #4c63d2;
  border: 2rpx solid rgba(76, 99, 210, 0.2);
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.swap-btn:active {
  background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
  transform: scale(0.95);
}

.save-btn {
  flex: 1;
  background: linear-gradient(135deg, #4c63d2 0%, #5a67d8 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(76, 99, 210, 0.25);
  transition: all 0.2s ease;
}

.save-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(76, 99, 210, 0.3);
}

/* === 响应式设计 === */
@media (max-width: 750rpx) {
  .container {
    padding: 20rpx 16rpx;
  }
  
  .card-header {
    padding: 24rpx 20rpx 16rpx;
  }
  
  .card-content {
    padding: 20rpx;
  }
  
  .rate-display {
    padding: 32rpx 24rpx;
  }
  
  .current-rate {
    font-size: 64rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
}

