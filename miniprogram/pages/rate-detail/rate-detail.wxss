page {
  background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
}

.container {
  padding: 40rpx 30rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

/* 汇率显示区域 */
.rate-display {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  color: white;
  text-align: center;
  box-shadow: 0 24rpx 60rpx rgba(102, 126, 234, 0.25);
}

.rate-pair {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.currency-info {
  font-size: 28rpx;
  font-weight: 600;
  opacity: 0.9;
}

.rate-arrow {
  font-size: 32rpx;
  font-weight: bold;
  opacity: 0.8;
}

.current-rate {
  font-size: 64rpx;
  font-weight: 300;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: -2rpx;
}

.rate-change {
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  display: inline-block;
  margin-bottom: 16rpx;
}

.update-time {
  font-size: 20rpx;
  opacity: 0.7;
}

/* AI 分析建议区域 */
.ai-analysis {
  background: white;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.header-icon {
  width: 48rpx;
  height: 48rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(45deg, #4c63d2, #5a67d8);
  border-radius: 16rpx;
  color: white;
}

.header-content {
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
  display: block;
  margin-bottom: 4rpx;
}

.section-desc {
  font-size: 24rpx;
  color: #64748b;
  display: block;
}

.analysis-content {
  padding: 32rpx;
}

.analysis-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
}

.status-indicator {
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
}

.status-indicator.good {
  background: linear-gradient(45deg, #10b981, #34d399);
}

.status-indicator.warning {
  background: linear-gradient(45deg, #f59e0b, #fbbf24);
}

.status-indicator.danger {
  background: linear-gradient(45deg, #ef4444, #f87171);
}

.status-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

.confidence-score {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.confidence-label {
  font-size: 22rpx;
  color: #64748b;
}

.confidence-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #4c63d2;
}

.analysis-summary {
  font-size: 28rpx;
  line-height: 1.6;
  color: #475569;
  margin-bottom: 24rpx;
}

.analysis-factors {
  margin-bottom: 24rpx;
}

.factors-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
  display: block;
  margin-bottom: 16rpx;
}

.factor-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.factor-icon {
  color: #4c63d2;
  font-weight: bold;
  margin-top: 4rpx;
}

.factor-text {
  flex: 1;
  font-size: 24rpx;
  line-height: 1.5;
  color: #64748b;
}

.analysis-suggestion {
  background: linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 100%);
  padding: 20rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #4c63d2;
}

.suggestion-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
  display: block;
  margin-bottom: 8rpx;
}

.suggestion-text {
  font-size: 24rpx;
  line-height: 1.5;
  color: #475569;
}

/* 目标汇率设置区域 */
.target-rate-section {
  background: white;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);
}

.target-inputs {
  padding: 32rpx;
}

.input-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
}

.input-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
  min-width: 120rpx;
}

.target-input {
  flex: 1;
  font-size: 28rpx;
  text-align: center;
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 16rpx;
  color: #1e293b;
}

.input-unit {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  min-width: 60rpx;
  text-align: center;
}

.quick-targets {
  margin-top: 24rpx;
}

.quick-title {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 16rpx;
  display: block;
}

.quick-buttons {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.quick-btn {
  background: #f1f5f9;
  color: #4c63d2;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 12rpx 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.quick-btn:active {
  background: #e2e8f0;
  transform: scale(0.95);
}

/* 长期监控区域 */
.monitoring-section {
  background: white;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);
}

.monitoring-options {
  padding: 32rpx;
}

.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #f8fafc;
  border-radius: 16rpx;
}

.option-left {
  flex: 1;
}

.option-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
  display: block;
  margin-bottom: 4rpx;
}

.option-desc {
  font-size: 22rpx;
  color: #64748b;
}

.option-switch {
  transform: scale(0.8);
}

.monitoring-stats {
  padding: 32rpx;
  background: #f8fafc;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 24rpx;
  display: block;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  border: 1rpx solid #e2e8f0;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #4c63d2;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #64748b;
}

/* 币种设置区域 */
.currency-settings {
  background: white;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);
}

.section-header-simple {
  padding: 32rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.setting-section {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.setting-section:last-child {
  border-bottom: none;
}

/* 币种选择器 */
.currency-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.currency-picker:active {
  background: #f1f5f9;
  transform: scale(0.98);
}

.picker-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.currency-flag {
  font-size: 48rpx;
  width: 60rpx;
  text-align: center;
}

.currency-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.currency-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.currency-code {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.picker-arrow {
  font-size: 32rpx;
  color: #94a3b8;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.swap-btn {
  flex: 1;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  color: #4c63d2;
  border: 2rpx solid rgba(76, 99, 210, 0.1);
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.2s ease;
}

.swap-btn:active {
  background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
  transform: scale(0.98);
}

.swap-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.save-btn {
  flex: 2;
  background: linear-gradient(135deg, #4c63d2 0%, #5a67d8 100%);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 12rpx 32rpx rgba(76, 99, 210, 0.3);
  transition: all 0.2s ease;
}

.save-btn:active {
  background: linear-gradient(135deg, #3c54c7 0%, #4a5bd1 100%);
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(76, 99, 210, 0.4);
} 