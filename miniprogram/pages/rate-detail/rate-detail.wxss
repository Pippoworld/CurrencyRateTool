}

.stats-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 16rpx;
  display: block;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.stat-item {
  text-align: center;
  padding: 16rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #4c63d2;
  display: block;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 18rpx;
  color: #64748b;
  display: block;
}

/* === 设置区域样式 === */
.setting-section {
  margin-bottom: 24rpx;
}

.setting-section:last-child {
  margin-bottom: 0;
} 