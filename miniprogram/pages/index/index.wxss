/* index.wxss - 优化汇率建议设计 */

page {
  background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.container {
  padding: 40rpx 30rpx;
  max-width: 750rpx;
  margin: 0 auto;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* 汇率信息卡片 - 使用绝对定位固定右边建议 */
.rate-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 24rpx 60rpx rgba(102, 126, 234, 0.25);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  min-height: 200rpx;
}

.rate-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -30%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.rate-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  position: relative;
  z-index: 1;
  padding-right: 200rpx; /* 为右边建议留出空间 */
}

.rate-pair {
  font-size: 28rpx;
  font-weight: 500;
  opacity: 0.9;
  letter-spacing: 1rpx;
}

.rate-value {
  font-size: 72rpx;
  font-weight: 300;
  letter-spacing: -2rpx;
  margin: 16rpx 0;
  line-height: 1;
}

/* 汇率主要信息行 - 数值和建议真正并排 */
.rate-main-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 32rpx;
  margin: 16rpx 0;
}

.rate-value-section {
  display: flex;
  flex-direction: column;
  gap: 0;
  flex: 0 0 auto;
}

.rate-change {
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  align-self: flex-start;
}

/* 右边固定建议容器 */
.rate-advice-fixed {
  position: absolute;
  top: 50%;
  right: 32rpx;
  transform: translateY(-50%);
  z-index: 2;
}

/* 建议卡片 - 固定在右边 */
.rate-advice {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  min-width: 160rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  padding: 20rpx 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.rate-advice:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

/* 状态指示器 */
.advice-status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.3);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.1); }
}

/* 建议标题 */
.advice-title-main {
  font-size: 24rpx;
  font-weight: 700;
  color: white;
  text-align: center;
  letter-spacing: 0.5rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 4rpx;
  line-height: 1.2;
}

/* 建议描述 */
.advice-brief {
  font-size: 20rpx;
  font-weight: 500;
  color: white;
  opacity: 0.9;
  text-align: center;
  line-height: 1.3;
  letter-spacing: 0.3rpx;
  margin-bottom: 8rpx;
}

/* 查看更多按钮 */
.advice-more {
  font-size: 18rpx;
  font-weight: 600;
  color: white;
  padding: 6rpx 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
  letter-spacing: 0.3rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.advice-more::after {
  content: '›';
  font-size: 20rpx;
  font-weight: bold;
  transition: transform 0.2s ease;
}

.advice-more:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.advice-more:active::after {
  transform: translateX(2rpx);
}

.advice-content-mobile {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.update-time {
  font-size: 20rpx;
  opacity: 0.7;
  margin-top: auto;
}

/* 计算器主卡片 - 正确的微信布局 */
.exchange-calculator {
  background: white;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.calc-header {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 24rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.calc-title {
  color: #334155;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 计算器主体 - 仿微信左右布局 */
.calc-horizontal {
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 货币输入行 - 左侧货币选择器，右侧数字输入 */
.currency-input-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 左侧货币选择器 */
.currency-selector-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  min-width: 140rpx;
}

.currency-selector-left:active {
  transform: scale(0.98);
  background: #f9fafb;
}

.currency-selector-left .currency-flag {
  font-size: 32rpx;
  width: 40rpx;
  text-align: center;
}

.currency-selector-left .currency-code {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  letter-spacing: 1rpx;
}

.currency-selector-left .selector-arrow {
  font-size: 20rpx;
  color: #94a3b8;
  margin-left: 8rpx;
}

/* 右侧数字输入框 */
.amount-input-right {
  flex: 1;
  background: transparent;
  border: none;
  font-size: 56rpx;
  font-weight: 300;
  text-align: right;
  color: #1e293b;
  letter-spacing: -1rpx;
  padding: 8rpx;
}

.amount-input-right:focus {
  color: #667eea;
}

/* 汇率显示 */
.rate-display-horizontal {
  text-align: center;
  padding: 24rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.rate-text-center {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 快捷操作网格 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.action-item {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
}

.action-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.action-item:active::before {
  opacity: 1;
}

.action-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.action-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  position: relative;
  z-index: 1;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 30rpx 20rpx;
  }
  
  .rate-header {
    padding: 32rpx 24rpx;
    min-height: 180rpx; /* 小屏幕也要保持最小高度 */
  }
  
  .rate-info {
    padding-right: 140rpx; /* 小屏幕稍微减少右边距但保持 */
  }
  
  .rate-advice-fixed {
    right: 24rpx; /* 小屏幕调整右边距，但保持绝对定位 */
  }
  
  .rate-advice {
    min-width: 120rpx; /* 小屏幕稍微缩小宽度 */
    padding: 16rpx 12rpx;
  }
  
  .advice-title-main {
    font-size: 20rpx;
  }
  
  .advice-brief {
    font-size: 16rpx;
  }
  
  .advice-more {
    font-size: 14rpx;
    padding: 4rpx 8rpx;
  }
  
  .rate-value {
    font-size: 56rpx;
  }
  
  .calc-horizontal {
    padding: 32rpx 24rpx;
  }
  
  .currency-input-row {
    padding: 20rpx;
  }
  
  .amount-input-right {
    font-size: 44rpx;
  }
  
  .currency-selector-left {
    min-width: 120rpx;
    padding: 12rpx 16rpx;
  }
  
  .currency-selector-left .currency-flag {
    font-size: 28rpx;
  }
  
  .currency-selector-left .currency-code {
    font-size: 28rpx;
  }
  
  .quick-actions {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .action-item {
    padding: 28rpx 16rpx;
  }
}

/* 微动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.rate-header,
.exchange-calculator,
.quick-actions {
  animation: fadeInUp 0.6s ease forwards;
}

.exchange-calculator {
  animation-delay: 0.1s;
}

.quick-actions {
  animation-delay: 0.2s;
} 