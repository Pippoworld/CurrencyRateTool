/* index.wxss - 优化汇率建议设计 */

page {
  background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.container {
  padding: 24rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
  max-width: 750rpx;
  margin: 0 auto;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* 汇率信息卡片 - 专业深蓝金色主题 */
.rate-header {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  padding: 32rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #3730a3 100%); /* 深蓝到靛蓝渐变 */
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(30, 58, 138, 0.4), 0 4rpx 12rpx rgba(30, 58, 138, 0.2); /* 双层蓝色阴影 */
  margin-bottom: 32rpx;
  gap: 24rpx;
  color: #ffffff;
  padding-top: 8rpx;
  position: relative;
  overflow: hidden;
}

/* 添加微妙的光泽效果 */
.rate-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 40%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
  pointer-events: none;
}

.rate-info {
  width: 100%; /* 卡片内容现在占据全部宽度 */
}

.primary-rate {
  flex-basis: 58%;
  padding-right: 0;
}

.rate-direction {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.rate-value-description {
  margin-top: 8rpx;
}

/* 汇率前缀 - 浅金色 */
.rate-prefix {
  font-size: 26rpx;
  color: #fbbf24; /* 浅金色，提升亲和力 */
  font-weight: 500;
}

.rate-display {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-top: 4rpx;
}

/* 主汇率数字 - 纯白突出 */
.rate-value {
  font-size: 80rpx;
  font-weight: 600; /* 加粗突出重要性 */
  color: #ffffff;
  letter-spacing: -2rpx;
  margin: 0;
  line-height: 1;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3); /* 增加深度感 */
}

/* 汇率单位 - 金色强调 */
.rate-unit {
  font-size: 32rpx;
  color: #f59e0b; /* 金色，突出货币价值感 */
  font-weight: 600;
}

.rate-unit.small {
  font-size: 24rpx;
}

/* 汇率主要信息行 - 数值和建议真正并排 */
.rate-main-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 32rpx;
  margin: 16rpx 0;
}

.rate-value-section {
  display: flex;
  flex-direction: column;
  gap: 0;
  flex: 0 0 auto;
}

.rate-change {
  font-size: 26rpx;
  margin-top: 16rpx;
  font-weight: 500;
}

.rate-change.small {
  margin-top: 12rpx;
  font-size: 24rpx;
}

/* 右边固定建议容器 */
.rate-advice-fixed {
  position: absolute;
  top: 50%;
  right: 24rpx; /* 小屏幕调整右边距，但保持绝对定位 */
  transform: translateY(-50%);
  z-index: 2;
}

/* 建议卡片 - 与主题色协调的设计 */
.rate-advice {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  min-width: 150rpx; /* 小屏幕稍微缩小宽度 */
  background: linear-gradient(135deg, #4c63d2 0%, #5a67d8 50%, #667eea 100%);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 22rpx 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 12rpx 40rpx rgba(76, 99, 210, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.rate-advice::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
  animation: shimmer 4s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { transform: translateX(-50%) translateY(-50%) rotate(0deg); opacity: 0.4; }
  50% { transform: translateX(-30%) translateY(-30%) rotate(180deg); opacity: 0.7; }
}

.rate-advice:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #3c54c7 0%, #4a5bd1 50%, #5a67d8 100%);
  box-shadow: 0 8rpx 24rpx rgba(76, 99, 210, 0.5);
}

/* 状态指示器 - 协调配色 */
.advice-status-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 9rpx;
  background: linear-gradient(45deg, #ffd700 0%, #ffeb3b 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 215, 0, 0.5);
  animation: pulse-bright 1.8s ease-in-out infinite;
  position: relative;
  z-index: 2;
}

@keyframes pulse-bright {
  0%, 100% { 
    opacity: 1; 
    transform: scale(1);
    box-shadow: 0 4rpx 16rpx rgba(255, 215, 0, 0.5);
  }
  50% { 
    opacity: 0.8; 
    transform: scale(1.15);
    box-shadow: 0 6rpx 24rpx rgba(255, 215, 0, 0.7);
  }
}

/* 建议标题 - 主要文案 */
.advice-title-main {
  font-size: 24rpx;
  font-weight: 800;
  color: #fff;
  text-align: center;
  letter-spacing: 0.6rpx;
  text-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 6rpx;
  line-height: 1.3;
  position: relative;
  z-index: 2;
}

/* 建议描述 - 操作建议 */
.advice-brief {
  font-size: 20rpx;
  font-weight: 600;
  color: #e8f4fd;
  text-align: center;
  line-height: 1.4;
  letter-spacing: 0.4rpx;
  margin-bottom: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 2;
}

/* 快速提示 */
.advice-quick-tip {
  font-size: 18rpx;
  font-weight: 500;
  color: #d1e7ff;
  text-align: center;
  line-height: 1.3;
  letter-spacing: 0.3rpx;
  margin-bottom: 10rpx;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}

/* 详细建议按钮 */
.advice-more {
  font-size: 18rpx;
  font-weight: 700;
  color: #4c63d2;
  padding: 8rpx 14rpx;
  background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
  border-radius: 14rpx;
  border: 2rpx solid rgba(76, 99, 210, 0.1);
  transition: all 0.2s ease;
  letter-spacing: 0.5rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.advice-more::after {
  content: '›';
  font-size: 22rpx;
  font-weight: bold;
  color: #5a67d8;
  transition: transform 0.2s ease;
}

.advice-more:active {
  background: linear-gradient(135deg, #f8fafc 0%, #edf2f7 100%);
  transform: scale(0.95);
  box-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.12);
}

.advice-more:active::after {
  transform: translateX(4rpx);
  color: #4c63d2;
}

.advice-content-mobile {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

/* 计算器主卡片 - 更紧凑的布局 */
.exchange-calculator {
  background: white;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.calc-header {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 20rpx 32rpx; /* 减少上下padding */
  text-align: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.calc-title {
  color: #334155;
  font-size: 30rpx; /* 稍微减小字体 */
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 计算器主体 - 更紧凑的间距 */
.calc-horizontal {
  padding: 28rpx 24rpx 20rpx; /* 小屏幕进一步减少padding */
  display: flex;
  flex-direction: column;
  gap: 20rpx; /* 减少间距 */
}

/* 货币输入行 - 更紧凑 */
.currency-input-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx; /* 减少padding */
  background: #f8fafc;
  border-radius: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 左侧货币选择器 - 稍微缩小 */
.currency-selector-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 16rpx; /* 减少padding */
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  min-width: 120rpx;
}

.currency-selector-left:active {
  transform: scale(0.98);
  background: #f9fafb;
}

.currency-selector-left .currency-flag {
  font-size: 26rpx; /* 减小 */
  width: 32rpx;
  text-align: center;
}

.currency-selector-left .currency-code {
  font-size: 26rpx; /* 减小 */
  font-weight: 600;
  color: #1e293b;
  letter-spacing: 1rpx;
}

.currency-selector-left .selector-arrow {
  font-size: 16rpx;
  color: #94a3b8;
  margin-left: 8rpx;
}

/* 右侧数字输入框 */
.amount-input-right {
  flex: 1;
  background: transparent;
  border: none;
  font-size: 44rpx; /* 小屏幕减小字体 */
  font-weight: 300;
  text-align: right;
  color: #1e293b;
  letter-spacing: -1rpx;
  padding: 4rpx;
}

.amount-input-right:focus {
  color: #667eea;
}

/* 汇率显示 */
.rate-display-horizontal {
  text-align: center;
  padding: 24rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.rate-text-center {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 快捷操作网格 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.action-item {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
}

.action-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.action-item:active::before {
  opacity: 1;
}

.action-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.action-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  position: relative;
  z-index: 1;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 30rpx 20rpx;
  }
  
  .rate-header {
    padding: 32rpx 24rpx;
    min-height: 180rpx; /* 小屏幕也要保持最小高度 */
  }
  
  .rate-info {
    padding-right: 140rpx; /* 小屏幕稍微减少右边距但保持 */
  }
  
  .rate-advice-fixed {
    right: 24rpx; /* 小屏幕调整右边距，但保持绝对定位 */
  }
  
  .rate-advice {
    min-width: 120rpx; /* 小屏幕稍微缩小宽度 */
    padding: 16rpx 12rpx;
  }
  
  .advice-title-main {
    font-size: 20rpx;
  }
  
  .advice-brief {
    font-size: 16rpx;
  }
  
  .advice-more {
    font-size: 14rpx;
    padding: 4rpx 8rpx;
  }
  
  .rate-value {
    font-size: 56rpx;
  }
  
  .calc-horizontal {
    padding: 32rpx 24rpx;
  }
  
  .currency-input-row {
    padding: 20rpx;
  }
  
  .amount-input-right {
    font-size: 44rpx;
  }
  
  .currency-selector-left {
    min-width: 120rpx;
    padding: 12rpx 16rpx;
  }
  
  .currency-selector-left .currency-flag {
    font-size: 28rpx;
  }
  
  .currency-selector-left .currency-code {
    font-size: 28rpx;
  }
  
  .quick-actions {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .action-item {
    padding: 28rpx 16rpx;
  }
}

/* 微动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.rate-header,
.exchange-calculator,
.quick-actions {
  animation: fadeInUp 0.6s ease forwards;
}

.exchange-calculator {
  animation-delay: 0.1s;
}

.quick-actions {
  animation-delay: 0.2s;
}

