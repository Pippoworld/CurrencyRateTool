/* 汇率工具页面样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-bottom: 100rpx;
}

.container {
  padding: 24rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* 通用卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.card-body {
  padding: 24rpx 32rpx 32rpx 32rpx;
}

/* 实时汇率概览 */
.overview-card .header-info {
  display: flex;
  flex-direction: column;
}

.update-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.refresh-btn {
  background: rgba(102, 126, 234, 0.1);
  border: none;
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.refresh-icon {
  font-size: 24rpx;
  color: #667eea;
}

.market-overview {
  margin-top: 16rpx;
}

.overview-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  margin: 0 8rpx;
}

.stat-item.up {
  background: rgba(76, 175, 80, 0.1);
}

.stat-item.down {
  background: rgba(244, 67, 54, 0.1);
}

.stat-item.flat {
  background: rgba(255, 193, 7, 0.1);
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-item.up .stat-value {
  color: #4CAF50;
}

.stat-item.down .stat-value {
  color: #F44336;
}

.stat-item.flat .stat-value {
  color: #FFC107;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 汇率计算器 */
.calculator-section {
  padding: 16rpx 0;
}

.calc-row {
  margin-bottom: 24rpx;
}

.calc-input-group {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  border: 2rpx solid transparent;
  transition: border-color 0.3s ease;
}

.calc-input-group:focus-within {
  border-color: #667eea;
}

.calc-input {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  background: transparent;
  border: none;
  outline: none;
}

.calc-currency-picker {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  background: white;
  border-radius: 12rpx;
  margin-left: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.calc-flag {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.calc-code {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-right: 8rpx;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

.calc-swap {
  display: flex;
  justify-content: center;
  margin: 16rpx 0;
}

.swap-btn {
  background: #667eea;
  border: none;
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.swap-icon {
  font-size: 24rpx;
  color: white;
  font-weight: 700;
}

.calc-info {
  text-align: center;
  margin-top: 16rpx;
}

.calc-rate {
  font-size: 24rpx;
  color: #666;
}

/* 主要货币汇率看板 */
.rates-board .card-header {
  flex-direction: column;
  align-items: stretch;
}

.sort-controls {
  display: flex;
  margin-top: 16rpx;
}

.sort-btn {
  flex: 1;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 16rpx 12rpx;
  font-size: 24rpx;
  color: #666;
  margin: 0 4rpx;
}

.sort-btn.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

.currency-list {
  margin-top: 16rpx;
}

.currency-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.currency-item:last-child {
  border-bottom: none;
}

.currency-basic {
  display: flex;
  align-items: center;
  flex: 1;
}

.currency-flag {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.currency-detail {
  display: flex;
  flex-direction: column;
}

.currency-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.currency-code {
  font-size: 24rpx;
  color: #666;
}

.currency-data {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 16rpx;
}

.current-rate {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.rate-change {
  display: flex;
  align-items: center;
}

.rate-change.up {
  color: #4CAF50;
}

.rate-change.down {
  color: #F44336;
}

.change-icon {
  font-size: 16rpx;
  margin-right: 4rpx;
}

.change-value, .change-percent {
  font-size: 20rpx;
}

.currency-actions {
  display: flex;
  flex-direction: column;
}

.action-btn {
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 12rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  padding: 0;
}

.action-btn:last-child {
  margin-bottom: 0;
}

.action-icon {
  font-size: 20rpx;
}

/* 银行汇率对比 */
.bank-selector {
  margin-bottom: 24rpx;
}

.bank-currency-picker {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
}

.picker-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.picker-currency {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.bank-list {
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
}

.bank-header {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: #e9ecef;
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
}

.bank-item {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr;
  gap: 16rpx;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #e9ecef;
  background: white;
}

.bank-item:last-child {
  border-bottom: none;
}

.bank-info {
  display: flex;
  align-items: center;
}

.bank-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.bank-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.bank-buy, .bank-sell {
  font-size: 24rpx;
  color: #1a1a1a;
  text-align: center;
}

.bank-spread {
  font-size: 24rpx;
  text-align: center;
  font-weight: 600;
}

.bank-spread.good {
  color: #4CAF50;
}

.bank-spread.normal {
  color: #FFC107;
}

.bank-spread.high {
  color: #F44336;
}

/* 图表样式 */
.chart-card .card-header {
  flex-direction: column;
  align-items: stretch;
}

.chart-controls {
  display: flex;
  margin-top: 16rpx;
}

.time-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  font-size: 24rpx;
  color: #666;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  margin: 0 4rpx;
  border-radius: 8rpx;
}

.time-tab.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

.chart-container {
  margin-top: 24rpx;
}

.chart-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: end;
  height: 200rpx;
  padding: 16rpx 0;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.chart-line {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.chart-point {
  width: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  min-height: 8rpx;
}

.chart-label {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

.chart-summary {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.summary-label {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.summary-value.high {
  color: #F44336;
}

.summary-value.low {
  color: #4CAF50;
}

/* 换汇成本计算 */
.cost-inputs {
  margin-bottom: 32rpx;
}

.cost-input-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  width: 120rpx;
  margin-right: 16rpx;
}

.cost-input {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.cost-input:focus {
  border-color: #667eea;
}

.input-currency, .input-unit {
  font-size: 24rpx;
  color: #666;
  width: 80rpx;
}

.cost-result {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.cost-breakdown {
  display: flex;
  flex-direction: column;
}

.cost-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.cost-item:last-child {
  border-bottom: none;
}

.cost-item.total {
  border-top: 2rpx solid #667eea;
  margin-top: 16rpx;
  padding-top: 24rpx;
  font-weight: 600;
}

.cost-label {
  font-size: 28rpx;
  color: #666;
}

.cost-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.cost-value.fee {
  color: #F44336;
}

.cost-value.received {
  color: #4CAF50;
}

/* 快速提醒设置 */
.quick-alerts {
  display: flex;
  flex-direction: column;
}

.alert-preset {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.alert-preset:last-child {
  border-bottom: none;
}

.preset-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.preset-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.preset-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.preset-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.preset-desc {
  font-size: 24rpx;
  color: #666;
}

.preset-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 实用工具集 */
.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 16rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 16rpx;
  text-align: center;
}

.tool-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.tool-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.tool-desc {
  font-size: 20rpx;
  color: #666;
  line-height: 1.4;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 20rpx;
  }
  
  .card-header {
    padding: 24rpx 24rpx 20rpx 24rpx;
  }
  
  .card-body {
    padding: 20rpx 24rpx 24rpx 24rpx;
  }
  
  .tools-grid {
    grid-template-columns: 1fr;
  }
  
  .chart-summary {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* 加载和刷新状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 