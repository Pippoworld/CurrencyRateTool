/* 汇率对比页面样式 */

page {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.container {
  padding: 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* 卡片通用样式 - 与首页保持一致 */
.card {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.card-header {
  background: #f8fafc;
  padding: 24rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #e2e8f0;
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
}

/* 多国汇率对比专用头部样式 */
.rates-comparison-header {
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  text-align: center !important;
  position: relative !important;
}

.title-with-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  justify-content: center;
}

.rates-comparison-header .card-title {
  color: #334155 !important;
  font-size: 28rpx !important;
  font-weight: 600 !important;
  letter-spacing: 1rpx;
}

.info-btn {
  background: none;
  border: none;
  padding: 0;
  width: auto;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-icon {
  font-size: 24rpx;
  color: #94a3b8;
  font-weight: normal;
}

.rates-comparison-header .refresh-btn {
  background: #f1f5f9;
  border: 1rpx solid #e2e8f0;
  border-radius: 50%;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  position: absolute;
  right: 0;
}

.refresh-icon {
  font-size: 20rpx;
  color: #64748b;
  transition: transform 0.3s ease;
}

.refresh-icon.spinning {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.card-body {
  padding: 24rpx 32rpx 32rpx 32rpx;
}

/* 计算器样式 - 与首页保持一致 */
.calculator-section {
  margin-bottom: 20rpx;
}

.currency-input-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.currency-selector {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  min-width: 120rpx;
}

.currency-selector:active {
  transform: scale(0.98);
  background: #f9fafb;
}

.currency-flag {
  font-size: 26rpx;
  width: 32rpx;
  text-align: center;
}

.currency-code {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  letter-spacing: 1rpx;
}

.currency-name {
  font-size: 22rpx;
  color: #64748b;
}

.selector-arrow {
  font-size: 16rpx;
  color: #94a3b8;
  margin-left: 8rpx;
}

.amount-input {
  flex: 1;
  background: transparent;
  border: none;
  font-size: 44rpx;
  font-weight: 300;
  text-align: right;
  color: #1e293b;
  letter-spacing: -1rpx;
  padding: 4rpx;
}

.amount-input:focus {
  color: #667eea;
}

.calc-tip {
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  text-align: center;
}

.tip-text {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
}

/* 汇率列表样式 */
.rates-list {
  margin-bottom: 24rpx;
}

.rate-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.2s ease;
}

.rate-item:last-child {
  border-bottom: none;
}

.rate-item:active {
  background: #f8f9fa;
}

.rate-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
}

.currency-basic {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.rate-flag {
  font-size: 32rpx;
}

.currency-detail {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.rate-code {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.rate-name {
  font-size: 24rpx;
  color: #7f8c8d;
}

.rate-values {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
  margin-right: 24rpx;
}

.rate-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.calculated-amount {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

.rate-change {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  min-width: 80rpx;
  justify-content: center;
}

.rate-change.up {
  background: rgba(46, 204, 113, 0.1);
  color: #27ae60;
}

.rate-change.down {
  background: rgba(231, 76, 60, 0.1);
  color: #c0392b;
}

.rate-change.flat {
  background: rgba(149, 165, 166, 0.1);
  color: #7f8c8d;
}

.change-icon {
  font-size: 18rpx;
}

/* 添加货币按钮 */
.add-currency-section {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.add-currency-btn {
  background: #f8fafc;
  border: 2rpx dashed #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: #64748b;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.add-currency-btn:active {
  background: #f1f5f9;
  border-color: #cbd5e1;
}

.add-icon {
  font-size: 24rpx;
}

.add-text {
  color: #64748b;
}

/* 走势图样式 */
.chart-container {
  padding: 24rpx 0;
}

.chart-wrapper {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  height: 120rpx;
  margin-bottom: 16rpx;
  padding: 0 16rpx;
}

.chart-bar {
  width: 32rpx;
  border-radius: 4rpx 4rpx 0 0;
  transition: all 0.2s ease;
}

.chart-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 16rpx;
}

.chart-label {
  font-size: 20rpx;
  color: #64748b;
  text-align: center;
  width: 32rpx;
}

.chart-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  text-align: center;
}

.stat-label {
  font-size: 22rpx;
  color: #64748b;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 26rpx;
  font-weight: 600;
}

.stat-value.high {
  color: #10b981;
}

.stat-value.low {
  color: #ef4444;
}

.stat-value.current {
  color: #3b82f6;
}

/* 时间弹窗样式 */
.time-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.time-modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 40rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.time-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 20rpx;
}

.time-modal-text {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.time-modal-close {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 货币选择弹窗 */
.currency-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-height: 70%;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #e2e8f0;
  background: #f8fafc;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
}

.modal-close {
  background: none;
  border: none;
  font-size: 32rpx;
  color: #64748b;
  padding: 0;
}

.modal-body {
  padding: 24rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.currency-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.currency-option {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
  transition: all 0.2s ease;
}

.currency-option:active {
  background: #f1f5f9;
  border-color: #cbd5e1;
}

.option-flag {
  font-size: 24rpx;
}

.option-code {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
}

.option-name {
  font-size: 20rpx;
  color: #64748b;
} 