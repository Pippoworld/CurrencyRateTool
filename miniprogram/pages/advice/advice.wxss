/* advice页面样式 - 移动端优化版本 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-bottom: 160rpx; /* 增加底部间距 */
}

.container {
  padding: 40rpx 24rpx; /* 优化左右间距 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* 货币概览样式 - 增大尺寸 */
.currency-overview {
  margin-bottom: 40rpx;
}

.rate-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 28rpx;
  padding: 48rpx 36rpx; /* 增大内边距 */
  margin-bottom: 36rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.1);
}

.current-rate {
  display: flex;
  flex-direction: column;
}

.rate-label {
  font-size: 30rpx; /* 增大字体 */
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.rate-value {
  font-size: 56rpx; /* 增大主要数字 */
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.2;
}

.rate-change {
  display: flex;
  align-items: center;
  padding: 20rpx 28rpx; /* 增大按钮尺寸 */
  border-radius: 20rpx;
}

.rate-change.positive {
  background: rgba(76, 175, 80, 0.15);
  color: #4CAF50;
}

.rate-change.negative {
  background: rgba(244, 67, 54, 0.15);
  color: #F44336;
}

.rate-change.neutral {
  background: rgba(255, 193, 7, 0.15);
  color: #FFC107;
}

.change-icon {
  font-size: 38rpx; /* 增大图标 */
  margin-right: 12rpx;
}

.change-text {
  font-size: 32rpx; /* 增大变化文字 */
  font-weight: 600;
}

/* 图表样式 - 增大尺寸 */
.rate-chart {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 28rpx;
  padding: 40rpx 36rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.08);
}

.chart-title {
  font-size: 38rpx; /* 增大标题 */
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 40rpx;
  display: block;
}

.chart-container {
  display: flex;
  justify-content: space-between;
  align-items: end;
  height: 240rpx; /* 增大图表高度 */
  padding: 24rpx 0;
}

.chart-line {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.chart-point {
  width: 20rpx; /* 增大数据点 */
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.chart-label {
  font-size: 24rpx; /* 增大标签字体 */
  color: #999;
  text-align: center;
}

/* AI分析样式 - 增大间距和字体 */
.analysis-section {
  margin-bottom: 48rpx;
}

.analysis-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 28rpx;
  padding: 44rpx 36rpx; /* 增大内边距 */
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.08);
  border-left: 10rpx solid #667eea; /* 增大边框 */
}

.analysis-title {
  font-size: 38rpx; /* 增大标题字体 */
  font-weight: 600;
  color: #667eea;
  margin-bottom: 20rpx;
  display: block;
}

.analysis-content {
  font-size: 32rpx; /* 增大内容字体 */
  line-height: 1.7; /* 增大行高 */
  color: #333;
}

/* 时间线样式 - 增大尺寸 */
.advice-timeline {
  position: relative;
  padding-left: 60rpx; /* 增大左边距 */
  margin-bottom: 56rpx;
}

.advice-timeline::before {
  content: '';
  position: absolute;
  left: 30rpx;
  top: 0;
  bottom: 0;
  width: 6rpx; /* 增大时间线宽度 */
  background: #e0e0e0;
  border-radius: 3rpx;
}

.timeline-item {
  position: relative;
  margin-bottom: 56rpx; /* 增大间距 */
  padding: 40rpx 36rpx; /* 增大内边距 */
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 28rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.08);
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -45rpx; /* 调整位置 */
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx; /* 增大圆点 */
  height: 30rpx;
  border-radius: 50%;
  background: #667eea;
  border: 6rpx solid white;
  box-shadow: 0 0 0 6rpx #e0e0e0;
}

.timeline-item.current .timeline-dot {
  background: #4CAF50;
  box-shadow: 0 0 0 6rpx rgba(76, 175, 80, 0.2);
}

.timeline-item.upcoming .timeline-dot {
  background: #FFC107;
  box-shadow: 0 0 0 6rpx rgba(255, 193, 7, 0.2);
}

.timeline-item.future .timeline-dot {
  background: #9E9E9E;
  box-shadow: 0 0 0 6rpx rgba(158, 158, 158, 0.2);
}

.timeline-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx; /* 增大间距 */
}

.timeline-title {
  font-size: 38rpx; /* 增大标题 */
  font-weight: 600;
  color: #1a1a1a;
}

.timeline-desc {
  font-size: 32rpx; /* 增大描述字体 */
  color: #666;
  line-height: 1.6;
}

.timeline-rate {
  font-size: 28rpx; /* 增大汇率字体 */
  color: #667eea;
  font-weight: 600;
  background: rgba(102,126,234,0.1);
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  display: inline-block;
  margin-top: 8rpx;
}

/* 操作按钮 - 增大尺寸 */
.action-buttons {
  display: flex;
  gap: 32rpx;
  margin-top: 40rpx;
}

.action-buttons .btn {
  flex: 1;
  margin: 0;
  padding: 24rpx 32rpx; /* 增大按钮 */
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  min-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 换汇方式样式 - 增大尺寸 */
.exchange-methods {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.method-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 28rpx;
  padding: 40rpx 36rpx; /* 增大内边距 */
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.08);
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.method-item.recommended {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102,126,234,0.08) 0%, rgba(255,255,255,0.95) 100%);
}

.method-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.method-icon {
  font-size: 54rpx; /* 增大图标 */
  margin-right: 20rpx;
}

.method-name {
  font-size: 40rpx; /* 增大名称字体 */
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
}

.recommended-badge {
  background: #667eea;
  color: white;
  font-size: 24rpx; /* 增大徽章字体 */
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  font-weight: 600;
}

.method-details {
  display: flex;
  justify-content: space-between;
  margin-bottom: 28rpx;
  padding: 32rpx; /* 增大内边距 */
  background: rgba(102,126,234,0.05);
  border-radius: 20rpx;
}

.method-rate, .method-fee, .method-time {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.rate-label, .fee-label, .time-label {
  font-size: 26rpx; /* 增大标签字体 */
  color: #999;
  margin-bottom: 10rpx;
}

.rate-value, .fee-value, .time-value {
  font-size: 32rpx; /* 增大数值字体 */
  font-weight: 600;
  color: #1a1a1a;
}

.method-pros {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.pros-title {
  font-size: 32rpx; /* 增大优势标题 */
  font-weight: 600;
  color: #667eea;
}

.pros-content {
  font-size: 30rpx; /* 增大优势内容字体 */
  color: #666;
  line-height: 1.6;
}

/* 市场资讯样式 - 新增 */
.news-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.news-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 28rpx;
  padding: 36rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
}

.news-item:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.news-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.news-title {
  font-size: 34rpx; /* 增大新闻标题 */
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
}

.news-summary {
  font-size: 28rpx; /* 增大摘要字体 */
  color: #666;
  line-height: 1.5;
}

.news-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.news-source {
  font-size: 24rpx;
  color: #999;
}

.news-time {
  font-size: 24rpx;
  color: #999;
}

.news-impact {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.news-impact.positive {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.news-impact.negative {
  background: rgba(244, 67, 54, 0.1);
  color: #F44336;
}

.news-impact.neutral {
  background: rgba(158, 158, 158, 0.1);
  color: #9E9E9E;
}

.news-arrow {
  font-size: 32rpx; /* 增大箭头 */
  color: #ccc;
  font-weight: 300;
}

/* 响应式设计 - 优化小屏幕 */
@media (max-width: 600rpx) {
  .container {
    padding: 32rpx 20rpx;
  }
  
  .rate-summary {
    flex-direction: column;
    gap: 32rpx;
    text-align: center;
  }
  
  .method-details {
    flex-direction: column;
    gap: 24rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .news-item {
    padding: 28rpx;
  }
  
  .chart-container {
    height: 200rpx;
  }
} 