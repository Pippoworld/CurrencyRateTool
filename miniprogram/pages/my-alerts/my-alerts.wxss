.alerts-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 32rpx;
}

/* 头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
}

.add-btn {
  background: linear-gradient(135deg, #4c63d2, #5a67d8);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.add-icon {
  font-size: 20rpx;
  font-weight: 700;
}

/* 分区 */
.section {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #f8fafc;
  border-bottom: 1rpx solid #e2e8f0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
}

.section-count {
  background: #4c63d2;
  color: white;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.clear-btn {
  background: #ef4444;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
}

/* 提醒列表 */
.alerts-list {
  padding: 16rpx;
}

.alert-item {
  background: #fafbfc;
  border: 2rpx solid #e2e8f0;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  transition: all 0.2s ease;
}

.alert-item.triggered {
  background: #fef7f7;
  border-color: #fca5a5;
}

.alert-content {
  padding: 24rpx;
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.alert-type {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.alert-type.buy .type-text {
  color: #10b981;
}

.alert-type.sell .type-text {
  color: #f59e0b;
}

.type-icon {
  font-size: 20rpx;
}

.type-text {
  font-size: 24rpx;
  font-weight: 600;
}

.alert-status {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #10b981;
}

.status-dot.triggered {
  background: #ef4444;
}

.status-text {
  font-size: 20rpx;
  color: #64748b;
}

.alert-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.currency-pair {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
}

.price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.target-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #4c63d2;
}

.trigger-direction {
  font-size: 20rpx;
  color: #64748b;
}

.create-time {
  margin-top: 8rpx;
}

.time-text {
  font-size: 18rpx;
  color: #94a3b8;
}

/* 操作按钮 */
.alert-actions {
  display: flex;
  background: #f1f5f9;
  border-top: 1rpx solid #e2e8f0;
}

.action-btn {
  flex: 1;
  border: none;
  padding: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  background: transparent;
}

.action-btn.pause {
  color: #f59e0b;
  border-right: 1rpx solid #e2e8f0;
}

.action-btn.delete {
  color: #ef4444;
}

.action-btn.reset {
  color: #10b981;
  border-right: 1rpx solid #e2e8f0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 64rpx 32rpx;
}

.empty-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
  display: block;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 22rpx;
  color: #94a3b8;
  line-height: 1.5;
}

/* 创建表单 */
.create-form-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 32rpx;
}

.create-form {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #f8fafc;
  border-bottom: 1rpx solid #e2e8f0;
}

.form-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

.close-btn {
  background: transparent;
  border: none;
  font-size: 36rpx;
  color: #64748b;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  line-height: 1;
}

.form-content {
  padding: 32rpx;
}

/* 类型选择器 */
.type-selector {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.type-btn {
  flex: 1;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.type-btn.active {
  background: #eff6ff;
  border-color: #4c63d2;
}

.type-label {
  font-size: 22rpx;
  color: #64748b;
  text-align: center;
}

.type-btn.active .type-label {
  color: #4c63d2;
  font-weight: 600;
}

/* 价格输入 */
.price-input-section {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 24rpx;
  color: #374151;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.input-row {
  display: flex;
  align-items: center;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.price-input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
  background: transparent;
}

.currency-unit {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 600;
}

.input-hint {
  font-size: 20rpx;
  color: #6b7280;
  margin-top: 8rpx;
  line-height: 1.4;
}

/* 货币对显示 */
.currency-display {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 24rpx;
}

.currency-label {
  font-size: 20rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 4rpx;
}

.currency-pair {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 表单操作 */
.form-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #f8fafc;
  border-top: 1rpx solid #e2e8f0;
}

.cancel-btn,
.save-btn {
  flex: 1;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.cancel-btn {
  background: white;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.save-btn {
  background: linear-gradient(135deg, #4c63d2, #5a67d8);
  color: white;
  border: none;
} 