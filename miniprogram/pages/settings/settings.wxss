/* settings页面样式 */
page {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部tabBar留出空间 */
}

.container {
  padding: 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* 卡片通用样式 - 与首页保持一致 */
.card {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.card-header {
  background: #f8fafc;
  padding: 24rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #e2e8f0;
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
}

.card-body {
  padding: 24rpx 32rpx 32rpx 32rpx;
}

/* 设置项样式 - 与首页保持一致 */
.setting-section {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

/* 新的用户信息样式 */
.user-profile-new {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
  padding: 24rpx 16rpx;
}

/* 头像区域 */
.avatar-section-new {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.user-avatar-new {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f8fafc;
  border: 3rpx solid #e2e8f0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.avatar-btn-new {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  transition: all 0.2s ease;
}

.avatar-btn-new:active {
  transform: scale(0.95);
  background: #5a67d8;
}

/* 基本信息区域 */
.user-info-section {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 1rpx solid #e2e8f0;
  transition: all 0.2s ease;
}

.info-row:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.info-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  min-width: 140rpx;
  flex-shrink: 0;
}

.label-icon {
  font-size: 28rpx;
  width: 32rpx;
  text-align: center;
}

.label-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #334155;
}

.info-input {
  flex: 1;
  background: white;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #334155;
  transition: border-color 0.2s ease;
}

.info-input:focus {
  border-color: #667eea;
  outline: none;
}

.info-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  transition: all 0.2s ease;
}

.info-picker:active {
  background: #f8fafc;
  border-color: #667eea;
}

.picker-text {
  font-size: 28rpx;
  color: #334155;
  font-weight: 500;
}

.picker-arrow {
  color: #94a3b8;
  font-size: 20rpx;
  transition: transform 0.2s ease;
}

.info-picker:active .picker-arrow {
  transform: rotate(180deg);
}

/* 设置列表样式 */
.settings-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}

.setting-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.setting-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #334155;
}

.setting-desc {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.4;
}

.setting-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #64748b;
  font-size: 28rpx;
}

.setting-switch {
  transform: scale(0.8);
}

/* 关于应用样式 */
.about-section {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.app-info {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.app-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #334155;
}

.app-version {
  font-size: 24rpx;
  color: #64748b;
}

.app-desc {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.4;
  margin-top: 8rpx;
}

.about-links {
  display: flex;
  flex-direction: column;
  gap: 0;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}

.link-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.2s ease;
}

.link-item:last-child {
  border-bottom: none;
}

.link-item:active {
  background: rgba(102,126,234,0.05);
}

.link-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
}

.link-text {
  color: #4c63d2;
  font-weight: 500;
}

.link-arrow {
  font-size: 24rpx;
  color: #999;
}

.setting-link {
  cursor: pointer;
  transition: all 0.2s ease;
}

.setting-link:active {
  transform: scale(0.98);
  opacity: 0.7;
}

/* 底部信息样式 */
.footer-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 48rpx 32rpx;
  margin-top: 32rpx;
}

.copyright {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.disclaimer {
  font-size: 20rpx;
  color: #ccc;
  text-align: center;
  line-height: 1.4;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .user-profile {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .user-details {
    width: 100%;
  }
  
  .detail-item {
    flex-direction: column;
    align-items: stretch;
  }
  
  .detail-label {
    min-width: auto;
  }
  
  .app-info {
    flex-direction: column;
    text-align: center;
  }
} 