/**app.wxss**/
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #333;
  line-height: 1.6;
  min-height: 100vh;
}

.container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 现代卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 48rpx;
  box-shadow: 0 40rpx 80rpx rgba(0,0,0,0.1);
  overflow: hidden;
  margin-bottom: 32rpx;
  border: 1px solid rgba(255,255,255,0.2);
}

.card-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 40rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  letter-spacing: 1rpx;
}

.card-body {
  padding: 48rpx;
}

/* 按钮样式 */
.btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.btn:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 16rpx 32rpx rgba(102,126,234,0.3);
}

.btn-secondary {
  background: rgba(102,126,234,0.1);
  color: #667eea;
  border: 2rpx solid #667eea;
}

/* 输入框样式 */
.input {
  background: white;
  border: 4rpx solid #f0f0f0;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  transition: all 0.2s ease;
}

.input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102,126,234,0.1);
}

/* 文字样式 */
.text-primary {
  color: #667eea;
}

.text-secondary {
  color: #999;
}

.text-center {
  text-align: center;
}

.font-light {
  font-weight: 300;
}

.font-medium {
  font-weight: 500;
}

.font-bold {
  font-weight: 600;
}

button {
  position: relative;
  border: none;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}